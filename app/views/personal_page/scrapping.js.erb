<% if @topic_type == "2" %>
$("#company-scrapping-result").html(`
    <table class="table table-striped table-bordered table-fixed">
        <thead>
            <tr>
                <th> Company</th>
                <th> Title of article or press release </th>
                <th> Link to the press release or article </th>
            <tr>
        </thead>

        <tbody>
            <% @scrapping_result.each do |row| %>
                <tr>
                    <td> <%= row[1] %> </td>
                    <td> <%= row[2] %> </td>
                    <td> <a href="<%= row[3] %>"><%= row[3] %></a> </td>
                </tr>
            <%end %>

            <% if @scrapping_result.length() ==0 %>
                <tr>
                    <td colspan="3"> No content </td>
                </tr>
            <% end %>
        </tbody>
    </table>
`)

<% else %>
    $("#pubmed-scrapping-result").html(`
        <h6 style="text-align:center;"><%= @topic %> Pubmed results</h6>
        <div class="table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table table-striped  table-bordered table-fixed" id="pubmed-scrapping-table">
                <thead>
                    <tr>
                        <th> Title </th>
                        <th> First/Last Author </th>
                        <th> Date </th>
                        <th> IF </th>
                        <th> Journal Name </th>
                        <th> Abstract </th>
                        <th> Link </th>
                        <th> Score </th>
                        
                    </tr> 
                </thead>

                <tbody>
                    <% @pubmed.each do |row| %>
                        <% date_difference = Date.today - Date.parse(row.date) %>
                        <% if date_difference < 7 %>
                            <tr class="yellow-highlight">
                                <td> <%= row.title %> </td>
                                <td> <%= row.authors %> </td>
                                <td> <%= row.date %> </td>
                                <td> <%= row.if %> </td>
                                <td> <%= row.journal %> </td>
                                <td> <%= row.abstract %> </td>
                                <td> <a href="<%= row.url %>" style="max-width: 100%"> <%= row.url %></a>  </td>
                                <td> <%= row.score %> </td>
                            </tr>
                        <% else %>
                            <tr>
                                <td> <%= row.title %> </td>
                                <td> <%= row.authors %> </td>
                                <td> <%= row.date %> </td>
                                <td> <%= row.if %> </td>
                                <td> <%= row.journal %> </td>
                                <td> <%= row.abstract %> </td>
                                <td> <a href="<%= row.url %>" style="max-width: 100%"> <%= row.url %></a> </td>
                                <td> <%= row.score %> </td>
                            </tr>
                        <% end %>
                    <%end %>

                </tbody>
            </table>
        </div>
    `)

    $("#rxcist-scrapping-result").html(`
        <h6 style="text-align:center;"><%= @topic %> BioRxiv results</h6>
        <div class="table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table table-striped table-bordered table-fixed" id="rxcist-scrapping-table">
                <thead>
                    <tr>
                        <th> Title </th>
                        <th> First/Last Author </th>
                        <th> Date </th>
                        <th> Downloads </th>
                        <th> Abstract </th>
                        <th> Link </th>
                        <th> Score </th>
                    </tr> 
                </thead>

                <tbody>
                    <% @rxcist.each do |row| %>
                        <% date_difference = Date.today - Date.parse(row.date) %>
                        <% if date_difference < 7 %>
                            <tr class="yellow-highlight">
                                <td> <%= row.title %> </td>
                                <td> <%= row.authors %> </td>
                                <td> <%= row.date %> </td>
                                <td> <%= row.downloads %> </td>
                                <td> <%= row.abstract %> </td>
                                <td> <a href="<%= row.url %>" style="max-width: 100%"> <%= row.url %></a> </td>
                                <td> <%= row.score %> </td>
                            </tr>
                        <% else %>
                            <tr>
                                <td> <%= row.title %> </td>
                                <td> <%= row.authors %> </td>
                                <td> <%= row.date %> </td>
                                <td> <%= row.downloads %> </td>
                                <td> <%= row.abstract %> </td>
                                <td> <a href="<%= row.url %>" style="max-width: 100%"> <%= row.url %></a> </td>
                                <td> <%= row.score %> </td>
                            </tr>
                        <% end %>
                    <%end %>
                </tbody>
            </table>
        </div>
    `)
    $('#pubmed-scrapping-table').DataTable({
        scrollY: 500,
        columnDefs: [
            {
                "width": "30%", "targets": [5]
            },
            {
                "width": "15%", "targets": [0, 1]
            }
        ],
        autoWidth: false,
        order: [[7, "desc"]]
    });
    $('#rxcist-scrapping-table').DataTable({
        scrollY: 500,
        columnDefs: [
            {
                "width": "30%", "targets": [4]
            },
            {
                "width": "15%", "targets": [0, 1]
            }
        ],
        autoWidth: false,
        order: [[6, "desc"]]
    });
<% end %>
$(".btn").removeClass("disabled");
$('.btn').removeClass("active");
$('#<%=raw @topic.gsub(/([" ])/){|match|'\\\\' + match} %>').addClass("active");